#include <iostream>
#include <cmath>
#include <math.h>

using namespace std;
const double PI = 3.14159265358979323846;

struct Vector2 {
    double x, y;

    Vector2() : x(0.0), y(0.0) {}
    Vector2(double x, double y) : x(x), y(y) {}

    void wartosck() {
        cout << "x: " << x << " y: " << y << endl;
    }

    void wartoscb() {
        double r = sqrt(x * x + y * y);
        double k = atan2(y, x);
        double alfa = fmod(k * (180.0 /PI) + 360.0, 360.0);
        cout << "r: " << r << " kat alfa: " << round(alfa) << endl;
    }

    void dlugosc() {
        double dl = sqrt(x * x + y * y);
        cout << "dlugosc wektora: " << dl << endl;
    }

    void reset() {
        x = 0.0;
        y = 0.0;
        cout << "zresetowany wektor: (" << x << "," << y << ")" << endl;
    }

    void zmiana() {
        cout << "Podaj wartosc 'x' wektora: ";
        cin >> x;
        cout << "Podaj wartosc 'y' wektora: ";
        cin >> y;
        cout << "Twoje wspolrzedne wynosza teraz: x= " << x << " y= " << y << endl;
    }

    void dwektor() {
        double x2, y2;
        cout << "Podaj wartosc 'x' drugiego wektora: ";
        cin >> x2;
        cout << "Podaj wartosc 'y' drugiego wektora: ";
        cin >> y2;
        x += x2;
        y += y2;
        cout << "Wynik: x= " << x << " y= " << y << endl;
    }

    void odwektor() {
        double x2, y2;
        cout << "Podaj wartosc 'x' drugiego wektora: ";
        cin >> x2;
        cout << "Podaj wartosc 'y' drugiego wektora: ";
        cin >> y2;
        x -= x2;
        y -= y2;
        cout << "Wynik: x= " << x << " y= " << y << endl;
    }

    void mnozenie() {
        double liczba;
        cout << "Podaj liczbe, przez ktora ma zostac pomnozony wektor: ";
        cin >> liczba;
        x *= liczba;
        y *= liczba;
        cout << "Wartosc wektora po wymnozeniu: x= " << x << " y= " << y << endl;
    }
};

int main() {
    double x, y;
    int wybor;
    cout << "Podaj wartosc 'x' wektora: ";
    cin >> x;
    cout << "Podaj wartosc 'y' wektora: ";
    cin >> y;
    Vector2 v1(x, y);

    cout << "Wybierz zadanie:" << endl;
    cout << "[1] Wyswietl wartosc wektora w ukladzie kartezjanskim." << endl;
    cout << "[2] Wyswietl wartosc wektora w ukladzie biegunowym." << endl;
    cout << "[3] Wyswietl dlugosc wektora" << endl;
    cout << "[4] Wyswietl wektor zresetowany do wspolrzednych (0.0)" << endl;
    cout << "[5] Zmien wartosc wektora." << endl;
    cout << "[6] Dodaje do siebie wektor." << endl;
    cout << "[7] Odejmuje od siebie inny wektor." << endl;
    cout << "[8] Wektor pomnozy siebie przez podana liczbe." << endl;

    cout << "Wpisz numer zadania: ";
    cin >> wybor;

    switch (wybor) {
    case 1:
        v1.wartosck();
        break;
    case 2:
        v1.wartoscb();
        break;
    case 3:
        v1.dlugosc();
        break;
    case 4:
        v1.reset();
        break;
    case 5:
        v1.zmiana();
        break;
    case 6:
        v1.dwektor();
        break;
    case 7:
        v1.odwektor();
        break;
    case 8:
        v1.mnozenie();
        break;
    default:
        cout << "Nieprawidlowy numer zadania." << endl;
        break;
    }

    return 0;
}
